<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoardSimulator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red_500</item>
        <item name="colorPrimaryVariant">@color/dark_red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red_200</item>
        <item name="colorSecondaryVariant">@color/dark_red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface colors for light theme -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Floating Action Button colors -->
        <item name="colorAccent">@color/dark_red_500</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BoardSimulator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BoardSimulator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BoardSimulator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>