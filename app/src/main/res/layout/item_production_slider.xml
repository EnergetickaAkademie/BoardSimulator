<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textPowerplantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Powerplant Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity: 0"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textProductionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.00 MW"
            android:textSize="18sp"
            android:textColor="@color/dark_red_500"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/seekBarProduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:progressTint="@color/dark_red_500"
            android:thumbTint="@color/dark_red_500" />

        <TextView
            android:id="@+id/textProductionRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Range: 0.00 - 0.00 MW"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
