<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BoardSimulator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red_500</item>
        <item name="colorPrimaryVariant">@color/dark_red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_red_200</item>
        <item name="colorSecondaryVariant">@color/dark_red_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surface colors for dark theme -->
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>