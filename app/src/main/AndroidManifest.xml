<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BoardSimulator"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BoardSimulator.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.simulation.SimulationActivity"
            android:exported="false"
            android:label="Simulation Dump"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
            
        <activity
            android:name=".ui.building.BuildingSelectionActivity"
            android:exported="false"
            android:label="Add Building"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
            
        <activity
            android:name=".ui.powerplant.PowerplantSelectionActivity"
            android:exported="false"
            android:label="Add Powerplant"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
            
        <activity
            android:name=".ui.boarddetail.BoardDetailActivity"
            android:exported="false"
            android:label="Board Configuration"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
            
        <activity
            android:name=".ui.building.BuildingListActivity"
            android:exported="false"
            android:label="Buildings List"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
            
        <activity
            android:name=".ui.powerplant.PowerplantListActivity"
            android:exported="false"
            android:label="Powerplants List"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
            
        <activity
            android:name=".ui.production.ProductionAdjustmentActivity"
            android:exported="false"
            android:label="Adjust Production"
            android:parentActivityName=".ui.boarddetail.BoardDetailActivity"
            android:theme="@style/Theme.BoardSimulator.NoActionBar" />
    </application>

</manifest>